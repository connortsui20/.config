{
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "ui_font_family": "Noto Sans Mono",
  "buffer_font_size": 14,
  "buffer_font_family": "Noto Sans Mono",
  "theme": {
    "mode": "dark",
    "light": "GitLab Light",
    "dark": "Tokyo Night (Custom)"
  },
  "wrap_guides": [100],
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "terminal": {
    "dock": "right",
    "font_size": 10,
    "font_family": "Noto Sans Mono"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1000
    }
  },
  "file_scan_exclusions": [
    // "**/.git",
    // "**/.svn",
    // "**/.hg",
    // "**/.jj",
    // "**/CVS",
    // "**/.DS_Store",
    // "**/Thumbs.db",
    // "**/.classpath",
    // "**/.settings"
  ],
  "file_scan_inclusions": [".env*", ".gitignore"],
  "inlay_hints": {
    "enabled": false,
    "show_background": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking"
    },
    "model_parameters": [],
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path": "/home/connor/.cargo/bin/rust-analyzer",
        "arguments": []
      },
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  }
}
